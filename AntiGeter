-- [[ VARIABLE & UI ]]
local _ACS_BANTAI = false
local _ANTI_CRIMINAL = false
local _AUTO_POINTS = false
local _UI_VISIBLE = true

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "HAZExBANTAI_V22"
ScreenGui.Parent = game.CoreGui
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
MainFrame.Position = UDim2.new(0.5, -100, 0.5, -50)
MainFrame.Size = UDim2.new(0, 200, 0, 180) -- Ukuran disesuaikan
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame)

local Title = Instance.new("TextLabel", MainFrame)
Title.Text = "HAZExBANTAI"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.TextColor3 = Color3.fromRGB(255, 0, 0)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.BackgroundTransparency = 1

-- [[ FUNGSI TOMBOL ]]
local function CreateButton(name, pos, callback)
    local Btn = Instance.new("TextButton", MainFrame)
    Btn.Size = UDim2.new(0.9, 0, 0, 30)
    Btn.Position = UDim2.new(0.05, 0, 0, pos)
    Btn.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Btn.Text = name .. " [OFF]"
    Btn.TextColor3 = Color3.fromRGB(200, 0, 0)
    Btn.Font = Enum.Font.GothamBold
    Btn.TextSize = 11
    Instance.new("UICorner", Btn)

    local active = false
    Btn.MouseButton1Click:Connect(function()
        active = not active
        Btn.Text = name .. (active and " [ON]" or " [OFF]")
        Btn.TextColor3 = active and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(200, 0, 0)
        callback(active)
    end)
end

CreateButton("UNLIMITED AMMO", 35, function(v) _ACS_BANTAI = v end)
CreateButton("ANTI CRIMINAL", 70, function(v) _ANTI_CRIMINAL = v end)
CreateButton("AUTO FARM POINTS", 105, function(v) _AUTO_POINTS = v end)

-- Tombol Tambahan untuk membantu kamu scan ulang jika perlu
CreateButton("OPEN SIMPLESPY", 140, function(v) 
    loadstring(game:HttpGet("https://raw.githubusercontent.com/78n/SimpleSpy/main/SimpleSpySource.lua"))()
end)

-- [[ HIDE UI SYSTEM ]]
game:GetService("UserInputService").InputBegan:Connect(function(input, chat)
    if not chat and input.KeyCode == Enum.KeyCode.H then
        _UI_VISIBLE = not _UI_VISIBLE
        MainFrame.Visible = _UI_VISIBLE
    end
end)

-- [[ LOGIC CORE ]]

-- Loop Utama (Digabung agar lebih stabil di Android)
spawn(function()
    while true do
        pcall(function()
            local lp = game.Players.LocalPlayer
            
            -- ACS Logic
            if _ACS_BANTAI then
                for _, v in pairs(lp.Backpack:GetChildren()) do
                    local s = v:FindFirstChild("ACS_Settings") or v:FindFirstChild("Settings")
                    if s then
                        local t = require(s)
                        t.Ammo = 999; t.StoredAmmo = 999; t.Recoil = {0,0}
                    end
                end
            end

            -- Anti Criminal
            if _ANTI_CRIMINAL then
                if lp.Team and (string.find(lp.Team.Name, "Criminal") or string.find(lp.Team.Name, "Inmate")) then
                    local re = game.ReplicatedStorage:FindFirstChild("TeamEvent") or game.ReplicatedStorage:FindFirstChild("ChangeTeam")
                    if re then re:FireServer("Civilian") end
                end
            end

            -- Auto Points (Berdasarkan ClaimGift)
            if _AUTO_POINTS then
                local remote = game.ReplicatedStorage:FindFirstChild("ClaimGift")
                if remote then
                    -- Kita coba spam ID 1 sampai 12
                    for i = 1, 12 do
                        remote:FireServer(tostring(i))
                    end
                end
            end
        end)
        wait(0.8) -- Delay aman agar Delta tidak crash
    end
end)
